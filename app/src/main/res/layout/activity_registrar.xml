<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/registt"
    tools:context=".registrarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva cuenta"
            android:textAlignment="center"
            android:textSize="30pt" />

        <EditText
            android:id="@+id/etCorreonuevo"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginTop="10pt"
            android:hint="Ingrese correo"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/etClavenuevo"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="10pt"
            android:hint="Ingrese contraseÃ±a"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnRegistrarnuevo"
            android:layout_width="120pt"
            android:layout_height="20pt"
            android:background="@drawable/button_rounded"
            android:text="Registrarse" />

        <Button

            android:id="@+id/btnRegresarnuevo"
            android:layout_width="120pt"
            android:layout_height="20pt"
            android:layout_marginTop="5pt"
            android:background="@drawable/button_rounded"
            android:text="Regresar" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>